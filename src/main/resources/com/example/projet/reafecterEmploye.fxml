<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" prefHeight="446.0" prefWidth="488.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projet.EmployeController">
    <Pane prefHeight="200.0" prefWidth="200.0">
        <children>
            <VBox alignment="CENTER" spacing="20">
                <Label text="Employee Affectation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Select Employee:" />
                    <ComboBox fx:id="employeeComboBox" promptText="Select Employee" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Select Department:" />
                    <ComboBox fx:id="departmentComboBox" promptText="Select Department" />
                </HBox>
                <Button onAction="#reafecterEmploye" text="Reaffect Employee" />
            </VBox>
        </children>
    </Pane>
</VBox>
